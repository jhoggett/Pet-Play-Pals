@using WebApplication.Web.Models.Account;
@model Pets
@{
    ViewData["Title"] = "DeletePet";
}

<a asp-action="Index" asp-controller="Account" class="go-back-button">Go Back to Edit Profile</a>
<h2>DeletePet</h2>

<form asp-controller="Account" asp-action="DeletePet" method="post">
    <p>If you are sure you want to delete this pet from your profile, click the delete pet button.</p>  
    <div>
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="Delete Pet" class="btn btn-default" />
    </div>
</form>
