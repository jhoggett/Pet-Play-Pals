@using WebApplication.Web.Models.Account;
@model ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
}

<a asp-action="Index" asp-controller="Account" class="g0-back-button">Go Back to Edit Profile</a>
<h2>Change Password</h2>

<form asp-controller="account" asp-action="changepassword" method="post">
    <div class="form-group">
        <label asp-for="OldPassword"></label>
        <input type="password" asp-for="OldPassword" />
        <span asp-validation-for="OldPassword"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input type="password" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <input type="submit" value="Change Password" class="btn btn-default" />
</form>

