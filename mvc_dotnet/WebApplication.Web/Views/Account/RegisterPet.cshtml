@model PetsUserViewModel
@{
    ViewData["Title"] = "RegisterPet";
}

<h2>Register your Pet</h2>
<a asp-action="Index" asp-controller="Account" class="skipFirstPet">Skip this step and register pet later</a>

<form asp-action="RegisterPet" asp-controller="Account" method="post">
    <div class="form-group">
        <label asp-for="Pet.Name">Name: </label>
        <input type="text" asp-for="Pet.Name" />
    </div>
    <div class="form-group">
        <label asp-for="Pet.Type">Type: </label>
        <select name="pet.Type">
            <option value="cat">Cat</option>
            <option value="dog">Dog</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Pet.Breed">Breed:</label>
        <input type="text" asp-for="Pet.Breed" />
    </div>
    <div class="form-group">
        <label asp-for="Pet.Age">Age: </label>
        <input type="number" asp-for="Pet.Age" />
    </div>
    <div class="form-group">
        <label asp-for="Pet.Weight">Weight: </label>
        <input type="number" asp-for="Pet.Weight" />
    </div>
    <div class="form-group">
        <label asp-for="Pet.Personality">Personality: </label>
        <input type="text" asp-for="Pet.Personality" />
    </div>
    <div class="form-group">
        <label asp-for="Pet.Photo">Photo: </label>
        <input type="hidden" asp-for="Pet.Photo" />
    </div>
    <div>
    <img id="photo" style="display:none;" />

    <button id="upload_widget" class="cloudinary-button">Upload Photo</button>
     </div>
    <br />
    <div>
        <input type="submit" value="Register Pet" class="btn btn-default" />
    </div>
</form>

<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

<script type="text/javascript">

    var myWidget = cloudinary.createUploadWidget({
        cloudName: 'petplaypals',
        uploadPreset: 'publicpetplayupload'
    }, (error, result) => {
        if (!error && result && result.event === "success") {
            console.log('Done! Here is the image info: ', result.info);
            const photoURL = document.getElementById("Pet_Photo");
            photoURL.value = result.info.url;
            const photo = document.getElementById("photo");
            photo.src = result.info.url;
            photo.style.display = "block";
        }
    }
    )

    document.getElementById("upload_widget").addEventListener("click", function (event) {
        event.preventDefault();
        myWidget.open();
    }, false);
</script>


