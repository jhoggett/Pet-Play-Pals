@model PetsUserViewModel
@{
    ViewData["Title"] = "RegisterPet";
}
<br>
<a asp-action="Index" asp-controller="Account" class="skipFirstPet">My Profile Page</a>
<br/>

<body>

    <form asp-action="RegisterPet" asp-controller="Account" class="registerpetcontainer" method="post">
        <h2 class="loginlable" style="margin-left: 15%; color:black ; padding-left: 10% ;font-size: 25px">Register a Pet</h2>
        <label asp-for="Pet.Name" class="loginlable">Name: </label>
        <input type="text" asp-for="Pet.Name" />
        <br />

        <label asp-for="Pet.Type" class="loginlable">Type: </label>
        <select name="pet.Type" class="buttonselector" style="margin-left:35px">
            <option value="cat">Cat</option>
            <option value="dog">Dog</option>
        </select>

        <label asp-for="Pet.Breed" class="loginlable">Breed:</label>
        <input type="text" asp-for="Pet.Breed" />
        <br />

        <label asp-for="Pet.Age" class="loginlable">Age: </label>
        <input type="number" asp-for="Pet.Age" />
        <br />

        <label asp-for="Pet.Weight" class="loginlable">Weight: </label>
        <input type="number" asp-for="Pet.Weight" />
        <br />

        <label asp-for="Pet.Personality" class="loginlable">Personality: </label>
        <input type="text" asp-for="Pet.Personality" />
        <br />

        <label asp-for="Pet.Photo" class="loginlable">Photo: </label>
        <input type="hidden" asp-for="Pet.Photo" />
        <br />

        <img id="photo" style="display:none;" />

        <button id="upload_widget" class="cloudinary-button" style="margin-left: 50px">Upload Photo</button>

        <input type="submit" value="Register Pet" class="registerpetllb" />

    </form>
</body>



<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

<script type="text/javascript">

    var myWidget = cloudinary.createUploadWidget({
        cloudName: 'petplaypals',
        uploadPreset: 'publicpetplayupload'
    }, (error, result) => {
        if (!error && result && result.event === "success") {
            console.log('Done! Here is the image info: ', result.info);
            const photoURL = document.getElementById("Pet_Photo");
            photoURL.value = result.info.url;
            const photo = document.getElementById("photo");
            photo.src = result.info.url;
            photo.style.display = "block";
        }
    }
    )

    document.getElementById("upload_widget").addEventListener("click", function (event) {
        event.preventDefault();
        myWidget.open();
    }, false);
</script>


