@using WebApplication.Web.Models.Account;
@model ChangeEmailUserViewModel
@{
    ViewData["Title"] = "ChangeEmail";
}

<h2>Change Email</h2>

<form asp-controller="account" asp-action="changeemail" method="post">
    <div class="form-group">
        <label asp-for="OldUserName">Old Email</label>
        <input type="email" asp-for="OldUserName" />
        <span asp-validation-for="OldUserName"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewUserName">New Email</label>
        <input type="email" asp-for="NewUserName" />
        <span asp-validation-for="NewUserName"></span>
    </div>
    <input type="submit" value="Change Email" class="btn btn-default" />
</form>

