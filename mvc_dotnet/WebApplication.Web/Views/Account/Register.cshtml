@using WebApplication.Web.Models.Account;
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<body>

    <form asp-controller="account" asp-action="register" class="registercontainer" method="post">
        <h2 class="registerlable" style="margin-left: 15%; color:white ; padding-left: 10%">Register</h2>

        <lable class="loginlable"><label asp-for="Email"></label></lable>
        <input type="email" asp-for="Email" />
       

        <lable class="loginlable"><label asp-for="FirstName">First Name</label></lable>
        <input type="text" asp-for="FirstName" />

        <lable class="loginlable"><label asp-for="LastName">Last Name</label></lable>
        <input type="text" asp-for="LastName" />

        <lable class="loginlable"><label asp-for="Password"></label></lable>
        <input type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>

        <lable class="loginlable"><label asp-for="ConfirmPassword"></label></lable>
        <input type="password" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>


        <input type="submit" value="Register" class="llb" />

    </form>
</body>


