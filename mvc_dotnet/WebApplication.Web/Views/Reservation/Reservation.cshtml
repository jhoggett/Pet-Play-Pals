@model ReservationUserViewModel
@{
    ViewData["Title"] = "Reservation";
}

<h2>Reservation</h2>


<div>
    <form asp-action="Reservation" asp-controller="Reservation" method="post">
        <div class="form-group">
            <label asp-for="Reservation.Address">Address: </label>
            <input type="text" asp-for="Reservation.Address" />
        </div>
        <div class="form-group">
            <label asp-for="Reservation.StartTime">Start Time: </label>
            <input type="datetime" asp-for="Reservation.StartTime" />
        </div>
        <div class="form-group">
            <label asp-for="Reservation.EndTime">End Time:</label>
            <input type="text" asp-for="Reservation.EndTime" />
        </div>
        <div class="form-group">
            <label asp-for="Reservation.PetName">Pet Name: </label>
            <select name="Reservation.PetName">
                @foreach (Pets pet in Model.Pets)
                {
                    <option value="@pet.Name">@pet.Name</option>
                }
            </select>
        </div>

        @*Want to also attach who I want to invite*@



        <div>
            <input type="submit" value="Send Invite" class="btn btn-default" />
        </div>
    </form>
</div>