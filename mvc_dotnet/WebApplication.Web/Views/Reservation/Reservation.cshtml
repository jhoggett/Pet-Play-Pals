@model ReservationUserViewModel
@{
    ViewData["Title"] = "Reservation";
}

<a asp-action="UserHome" asp-controller="Account" class="go-back-button">Go Back to User Home Page</a>


<body>
    <form asp-action="Reservation" asp-controller="Reservation" method="post" class="makeaPlayDateContainer">

        <h2 class="loginlable" style="margin-left: 15%; color:black ; padding-left: 10% ;font-size: 25px">Make A Play Date</h2>

        <label asp-for="Reservation.Address" class="loginlable">Address: </label>
        <input type="text" asp-for="Reservation.Address" />


        <label asp-for="Reservation.StartTime" class="loginlable">Start Time: </label>
        <input type="date" asp-for="Reservation.StartTime" />
        <label>Hour:</label>
        <select name="StartHour">
            <option value="0">12 AM</option>
            <option value="1">1 AM</option>
            <option value="2">2 AM</option>
            <option value="3">3 AM</option>
            <option value="4">4 AM</option>
            <option value="5">5 AM</option>
            <option value="6">6 AM</option>
            <option value="7">7 AM</option>
            <option value="8">8 AM</option>
            <option value="9">9 AM</option>
            <option value="10">10 AM</option>
            <option value="11">11 AM</option>
            <option value="12">12 PM</option>
            <option value="13">1 PM</option>
            <option value="14">2 PM</option>
            <option value="15">3 PM</option>
            <option value="16">4 PM</option>
            <option value="17">5 PM</option>
            <option value="18">6 PM</option>
            <option value="19">7 PM</option>
            <option value="20">8 PM</option>
            <option value="21">9 PM</option>
            <option value="22">10 PM</option>
            <option value="23">11 PM</option>
        </select>
        <label>Minutes:</label>
        <select name="StartMinute">
            <option value="0">00</option>
            <option value="15">15</option>
            <option value="30">30</option>
            <option value="45">45</option>
        </select>


        <label asp-for="Reservation.EndTime" class="loginlable">End Time:</label>
        <input type="date" asp-for="Reservation.EndTime" />
        <label>Hour:</label>
        <select name="EndHour">
            Hour:
            <option value="0">12 AM</option>
            <option value="1">1 AM</option>
            <option value="2">2 AM</option>
            <option value="3">3 AM</option>
            <option value="4">4 AM</option>
            <option value="5">5 AM</option>
            <option value="6">6 AM</option>
            <option value="7">7 AM</option>
            <option value="8">8 AM</option>
            <option value="9">9 AM</option>
            <option value="10">10 AM</option>
            <option value="11">11 AM</option>
            <option value="12">12 PM</option>
            <option value="13">1 PM</option>
            <option value="14">2 PM</option>
            <option value="15">3 PM</option>
            <option value="16">4 PM</option>
            <option value="17">5 PM</option>
            <option value="18">6 PM</option>
            <option value="19">7 PM</option>
            <option value="20">8 PM</option>
            <option value="21">9 PM</option>
            <option value="22">10 PM</option>
            <option value="23">11 PM</option>
        </select>
        <label>Minutes:</label>
        <select name="EndMinute">
            <option value="0">00</option>
            <option value="15">15</option>
            <option value="30">30</option>
            <option value="45">45</option>
        </select>


        <label asp-for="Reservation.PetName" class="loginlable">Pet Name: </label>
        <select name="Reservation.PetName" style="margin-left:35px">
            @foreach (Pets pet in Model.Pets)
            {
                <option value="@pet.Name">@pet.Name</option>
            }
        </select>

        @*Want to also attach who I want to invite*@

        <label asp-for="InvitedUser.Username" class="loginlable">Enter email of User to invite:</label>
        <input type="email" asp-for="InvitedUser.Username" />



        <label asp-for="Reservation.Description" class="loginlable">Quick Description of meet up:</label>
        <input type="text" asp-for="Reservation.Description" />


        <input type="submit" value="Send Invite" class="makeaplaydatellb" />

    </form>
</body>